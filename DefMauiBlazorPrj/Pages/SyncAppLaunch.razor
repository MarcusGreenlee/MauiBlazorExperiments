@page "/SyncAppLaunch"

@* Code from .NET MAUI Blazor Overview, Daniel Roth https://www.youtube.com/watch?v=swwWgFZJvEs *@

<h3>Synchronous Application Launch</h3>
<h2>Waits around until the user exists</h2>

<button @onclick="GetMessage">Edit</button>
<p>@message</p>

@code {
    string message = "Hello!";

    void GetMessage()
    {
        var file = Path.GetTempFileName();
        File.WriteAllText(file, "Enter message here");
        var p = System.Diagnostics.Process.Start("notepad", file);
        p.WaitForExit();
        message = File.ReadAllText(file);
    }
}
